{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-lg mt-10">
    <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Create an Account</h1>

    {{ form_start(registrationForm) }}

    <!-- Email Field -->
    <div class="mb-4">
        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:ring focus:ring-indigo-500'}}) }}
        {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-600 text-sm'}}) }}
    </div>

    <!-- Password Field -->
    <div class="mb-4">
        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg focus:ring focus:ring-indigo-500'}}) }}
        {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-600 text-sm'}}) }}
    </div>

    <!-- Agree to Terms Field -->
    <div class="flex items-center mb-6">
        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'text-gray-700'}}) }}
        {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'text-red-600 text-sm'}}) }}
    </div>

    <!-- Submit Button -->
    <div class="text-center">
        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg font-semibold hover:bg-blue-700 transition duration-200">Register</button>
    </div>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}
